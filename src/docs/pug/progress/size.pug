extends ../example-responsive.pug

block head_title
  +example_head_title('progress', 'size')

block meta_description
  +example_meta_description('progress', 'size')

block breadcrumb
  +example_breadcrumb('progress')

block example_description
  +example_description('progress', 'size')

block example_result
  - for(var size = 1; size <= 5; size++)
    +progress_variant(size)

block example_code
  :encode-pug
    | <!-- Source -->
    - for(var size = 1; size <= 5; size++)
      .progress(class='progress-' + size)

block responsive_description
  h2.h3.fw-400 Responsive progress sizes

block responsive_code
  :encode-pug
    | <!-- Source -->
    each breakpoint in ['sm', 'md', 'lg', 'xl']
      - for(var size = 1; size <= 5; size++)
        .progress(class='progress-' + breakpoint + '-' + size)
      ="\n"
