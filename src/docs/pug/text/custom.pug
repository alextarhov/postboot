extends ../example.pug

block head_title
  +example_head_title('text', 'custom')

block meta_description
  +example_meta_description('text', 'custom')

block breadcrumb
  +example_breadcrumb('text')

block example_description
  +example_description('text', 'custom')

block example_result
  each text, variant in customColors
    if variant != 'white'
      +text_variant(text, variant)

block example_code
  :encode-pug
    | <!-- Source -->
    each text, variant in customColors
      if variant != 'white'
        div(class='text-' + variant)= text
