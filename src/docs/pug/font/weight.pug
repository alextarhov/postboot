extends ../example.pug

block head_title
  +example_head_title('font', 'weight')

block meta_description
  +example_meta_description('font', 'weight')

block breadcrumb
  +example_breadcrumb('font')

block example_description
  +example_description('font', 'weight')

block example_result
  each text, weight in {'100': 'Thin', '200': 'Extra light', '300': 'Light', '400': 'Normal', '500': 'Medium', '600': 'Semi bold', '700': 'Bold', '800': 'Extra bold', '900': 'Black'}
    +font_weight(text, weight)

block example_code
  :encode-pug
    | <!-- Source -->
    each text, weight in {'100': 'Thin', '200': 'Extra light', '300': 'Light', '400': 'Normal', '500': 'Medium', '600': 'Semi bold', '700': 'Bold', '800': 'Extra bold', '900': 'Black'}
      p(class='fw-' + weight)= text

block example_footer_after
  +example_footer#responsive
    :encode-pug
      | <!-- Responsive -->
      each breakpoint in ['sm', 'md', 'lg', 'xl']
        each text, weight in {'100': 'Thin', '200': 'Extra light', '300': 'Light', '400': 'Normal', '500': 'Medium', '600': 'Semi bold', '700': 'Bold', '800': 'Extra bold', '900': 'Black'}
          p(class='fw-' + breakpoint + '-' + weight)
        ="\n"

block sidebar_right_items_after
  li.nav-item
    a.nav-link(href="#responsive") Responsive
