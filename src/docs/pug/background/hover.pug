extends ../example.pug

block head_title
  +example_head_title('background', 'hover')

block meta_description
  +example_meta_description('background', 'hover')

block breadcrumb
  +example_breadcrumb('background')

block example_description
  +example_description('background', 'hover')

block example_body
  .card-body
    each text, variant in colors
      if variant != 'light' && variant != 'white'
        +background_hover(text, variant, 'white')
  .card-body.bg-dark.bg-striped.text-white
    .d-inline-block
      +background_hover('Light', 'light', 'dark')
    .d-inline-block
      +background_hover('White', 'white', 'dark')

block example_code
  :encode-pug
    | <!-- Source -->
    each text, variant in colors
      div(class='bg-hover-' + variant)
