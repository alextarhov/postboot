extends ../example.pug

block head_title
  +example_head_title('background', 'hover_opacity')

block meta_description
  +example_meta_description('background', 'hover_opacity')

block breadcrumb
  +example_breadcrumb('background')

block example_description
  +example_description('background', 'hover_opacity')

block example_body
  .card-body.bg-dark.bg-striped.text-white
    each text, variant in colors
      +background_hover(text, variant + '-50', 'white')

block example_code
  :encode-pug
    | <!-- Source -->
    each text, variant in colors
      - for(var i = 1; i <= 9; i++)
        div(class='bg-hover-' + variant + '-' + i * 10)
      = "\n"
