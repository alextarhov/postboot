extends ../example.pug

block head_title
  +example_head_title('border', 'opacity')

block meta_description
  +example_meta_description('border', 'opacity')

block breadcrumb
  +example_breadcrumb('border')

block example_description
  +example_description('border', 'opacity')

block example_body
  .card-body.bg-dark.bg-striped
    each text, variant in colors
      +border_alpha(text, variant + '-50')

block example_code
  :encode-pug
    | <!-- Source -->
    each text, variant in colors
      - for(var i = 1; i <= 9; i++)
        div(class='border-' + variant + '-' + i * 10)
      = "\n"
