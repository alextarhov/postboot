extends ../example.pug

block head_title
  +example_head_title('button', 'size')

block meta_description
  +example_meta_description('button', 'size')

block breadcrumb
  +example_breadcrumb('button')

block example_description
  +example_description('button', 'size')

block example_result
  - for(var size = 1; size <= 5; size++)
    +button_size('Button', size)

block example_code
  :encode-pug
    | <!-- Source -->
    - for(var size = 1; size <= 5; size++)
      button.btn.btn-secondary(type='button' class='btn-' + size) Button

block example_footer_after
  +example_footer#responsive
    :encode-pug
      | <!-- Responsive -->
      each breakpoint in ['sm', 'md', 'lg', 'xl']
        - for(var size = 1; size <= 5; size++)
          button.btn.btn-secondary(type='button' class='btn-' + breakpoint + '-' + size) Button
        ="\n"

block sidebar_right_items_after
  li.nav-item
    a.nav-link(href="#responsive") Responsive
