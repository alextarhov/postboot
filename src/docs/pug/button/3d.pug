extends ../example.pug

block head_title
  +example_head_title('button', '3d')

block meta_description
  +example_meta_description('button', '3d')

block breadcrumb
  +example_breadcrumb('button')

block example_description
  +example_description('button', '3d')

block example_result
  each text, variant in colors
    if variant != "black" && variant != "white"
      +button_3d(text, variant)

block example_code
  :encode-pug
    | <!-- Source -->
    each text, variant in colors
      if variant != "black" && variant != "white"
        button.btn(type='button' class='btn-3d-' + variant)= text
